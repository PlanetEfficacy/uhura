<div class="container row">
  <div class="card">
    <div class="card-content">
      <div class="center-align">
        <h4>
          <%= guardian.name %>
          <% if guardian.primary %>
            <a href="#modal1" class="waves-effect waves-light amber-text text-accent-2", id="primary-contact">
              <%= render "shared/icon", icon: "star" %>
            </a>
          <% end %>
        </h4>
      </div>
      <div class="container">
        <table class="centered">
          <tr>
            <th>Phone:</th>
            <td><%= guardian.phone_number %></td>
          </tr>
          <tr>
            <th>Language:</th>
            <td><%= guardian.language %></td>
          </tr>
          <% if guardian.class == Guardian %>
          <tr>
            <th>Relationship:</th>
            <td><%= guardian.relationship_type %></td>
          </tr>
          <% end %>
          <tr>
            <th>Total messages:</th>
            <td><%= guardian.messages.count %></td>
          </tr>
        </table>

      </div>
    </div>
  </div>
</div>
