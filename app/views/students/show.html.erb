<%= render "shared/student_card", student: @student %>

<% if @student.guardians.count > 0 %>
    <%= render "/shared/guardian_collection", student: @student %>
<% else %>
  <%= render "shared/help/open_modal",
      header: "Time to add some guardians!",
      text: Dialogue.how_to_make_guardians,
      link_text: "Create your first guardian",
      link_path: new_guardian_path(student_id: @student.id) %>
<% end %>

<%= render "/shared/buttons/student_show",
    path: new_guardian_path(student_id: @student.id),
    delete_path: student_path(@student),
    edit_path: edit_student_path(@student),
    add_path: new_add_guardian_path(@student) %>

<%= render "shared/delete_modal",
    model: @student,
    path: student_path(@student, group_id: @group_id) %>
