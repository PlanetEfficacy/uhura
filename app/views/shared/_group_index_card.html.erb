<div class="col s12 m6 l4">
  <div class="card">
    <div class="card-content">
      <div class="row center-align">
          <%= render "shared/group_index_card_button", group: group %>
          <h4><%= link_to group.name, group_path(group), class: "indigo-text text-darken-3" %></h4>
          <div class="container">
            <table>
              <tr>
                <th>Total Students:</th>
                <td><%= group.students.count %></td>
              </tr>
              <tr>
                <th>Total Guardians:</th>
                <td><%= group.guardian_count %></td>
              </tr>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
