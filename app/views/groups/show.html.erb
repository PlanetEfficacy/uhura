<%= render "/shared/group_card", group: @group %>

<% if @group.students.count > 0 %>
  <%= render "/shared/students", group: @group, primary_guardian: @primary_guardian %>
<% else %>
  <%= render "shared/help/open_modal",
      header: "Time to add some students!",
      text: Dialogue.how_to_make_students,
      link_text: "Create your first student",
      link_path: new_student_path(group_id: @group.id) %>
<% end %>

<%= render "/shared/buttons/group_show",
    path: new_student_path(group_id: @group.id),
    delete_path: group_path(@group),
    edit_path: edit_group_path(@group),
    upload_path: new_upload_path(@group),
    add_path: new_add_student_path(@group) %>

<%= render "shared/delete_modal",
    model: @group,
    path: group_path(@group) %>
