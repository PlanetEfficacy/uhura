<div class="container row">
  <% if current_user %>
    <% @groups.each do |group| %>

        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-content">
              <h5><%= group.name %></h5>
            </div>
            <div class="card-action">
              <a href="<%= new_student_path(group_id: group.id) %>" class="indigo-text text-darken-3">Add Student</a>
              <a href="#" class="indigo-text text-darken-3">Upload Students</a>
            </div>
          </div>
        </div>

    <% end %>
  <% end %>
</div>

<%= render 'shared/main_button' %>
