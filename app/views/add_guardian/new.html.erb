<div class="container">
  <%= render "/shared/forms/header", header: "Add Existing Guardian" %>

  <div class="row">
    <%= form_tag(add_guardian_path(@student), method: "post") do %>
      <div class="input-field">
        <%= select_tag :guardian,
            options_for_select(AddContactable.new(current_user).guardian_dropdown),
            id: "guardian-select" %>
        <%= label_tag "Add existing guardian" %>
      </div>

      <div class="input-field">
        <%= submit_tag "Add", class: "btn waves-effect waves-light indigo darken-3"  %>
      </div>
    <% end %>
  </div>

  <%= render 'shared/help/modal',
      header: "Students",
      text: Dialogue.existing_guardian_help %>
</div>
