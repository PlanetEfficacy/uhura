<div class="container row">
  <ul class="collection col s12 m6 offset-m3">
  <% @students.each do |student| %>
    <li class="collection-item valign-wrapper">
      <div class="center-align">
        <%= link_to content_tag(:i, "textsms", class: "material-icons"),
          new_message_path(contact_id: student.id), 
          id: nil, class: "btn-floating indigo darken-3" %>
      </div>
      <div class="col offset-m1">
        <h5><%= student.first_name %> <%= student.last_name %></h5>
        <p><%= student.phone_number %> <small><%= student.language %><small></p>
      </div>
    </li>
  <% end %>
  </ul>
</div>
