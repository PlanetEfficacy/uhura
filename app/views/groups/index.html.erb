  <% if current_user %>
  <div class="container row">
    <% @groups.each do |group| %>

        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-content">

              <div class="row valign-wrapper">
                <div>
                  <%= link_to (render "shared/icon", icon: "textsms"), new_group_message_path(group), class: "btn-floating btn-small waves-effect waves-light indigo darken-3" %>
                </div>
                <div class="col offset-m1">
                  <h5><%= link_to group.name, group_path(group), class: "indigo-text text-darken-3" %></h5>
                </div>
              </div>

              <div class="row">
                <a href="<%= new_student_path(group_id: group.id) %>" class="indigo-text text-darken-3">Add Student</a>
                <a href="#" class="indigo-text text-darken-3">Upload Students</a>
              </div>

            </div>
          </div>
        </div>

    <% end %>
  </div>
  <% else %>
    <%= render "shared/parallax" %>
  <% end %>

<%= render 'shared/main_button' %>
